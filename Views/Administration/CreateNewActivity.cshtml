@using WebApp.ViewModels.Administration
@model AddNewActivity_VM


<form enctype="multipart/form-data" asp-action="AddNewActivity" asp-controller="Administration" method="post">

    <label>Enter title</label>
    <input type="text" asp-for="Title" />

    <label>Enter detailed description of activity. Description is very important, so make sure it implicates all important information for clients.</label>
    <textarea asp-for="Description" placeholder="Enter description here.." cols="10" rows="5"></textarea>

    <label>Upload a photo that is related to the activity.</label>
    <div class="custom-file">
        <input asp-for="Image" class="custom-file-input" />
        <label class="custom-file-label">Choose picture</label>
    </div>

    <button type="submit" class="btn-primary">CREATE</button>
</form>

