@using WebApp.ViewModels.Sponsor
@model SponsorOptions_VM


<div class="margin-bottom-50">
    <h2>Add new sponsor</h2>
    <p>Info about sposnsors you add will be shown on home page and will be visible to every guest.</p>
    <form enctype="multipart/form-data" asp-action="AddNewSponsor" asp-controller="Sponsor" method="post" class="d-flex flex-column w-75 div-align-center">
        <div class="d-flex justify-content-between margin-top-5">
            <label>Name</label>
            <input asp-for="NewSponsorToAdd.Name" type="text" placeholder="Company name" class="w-75" />
        </div>
        <div class="d-flex justify-content-between margin-top-5">
            <label>Area of interest</label>
            <select asp-for="NewSponsorToAdd.AreaOfInterest" class="w-75">
                <option value="0">Transport</option>
                <option value="1">Catering</option>
                <option value="2">Other</option>
            </select>
        </div>
        <div class="d-flex justify-content-between margin-top-5">
            <label>Upload a company logo.</label>
            <div class="custom-file w-75">
                <input asp-for="NewSponsorToAdd.Image" class="custom-file-input" />
                <label class="custom-file-label">Choose picture</label>
            </div>
        </div>
        <button class="btn btn-primary padding-5 w-300px div-align-center margin-top-25">Add</button>
    </form>
</div>


@foreach (var sponsor in Model.AddedSponsors)
{   
    <div class="margin-top-25 margin-bottom-20 padding-20 w-100 d-flex justify-content-center">
        <img class="img-size-400" src="/Images/Sponsors/@sponsor.ImageName" alt="" />
        <div class="padding-50">
            <h3>@sponsor.Name</h3>
            <h5>@sponsor.AreaOfInterest</h5>
            <button onclick="location.href = '/Sponsor/RemoveSponsor?SponsorId=@sponsor.Id'" class="margin-top-25 btn-white-black"><i class="bi bi-trash"></i> REMOVE</button>
        </div>
    </div>
}




 