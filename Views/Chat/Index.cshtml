@using WebApp.EntityModels
@model List<Chat>

<div class="d-flex h-100 from-row-to-column column-spread">
    <vc:room></vc:room>


    <div class="chat-body">
        <h6 class="text-center">Chat rooms you can join.</h6>
        <h6 class="text-center">(@Model.Count())</h6>
        @foreach (var chat in Model)
        {
            <a class="room-button" asp-controller="Chat" asp-action="JoinRoom" asp-route-id="@chat.Id">
                @chat.Name
            </a>
        }
    </div>
</div>

