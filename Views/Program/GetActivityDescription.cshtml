@using WebApp.ViewModels.Program
@model GetActivityDetails_VM


<div class="flex-section-row switch-to-column">
    <div class="flex-section-row-child-50 max-width-400px max-height-400px border-radius-5 margin-5 object-fit-cover">
        @{ var image = string.IsNullOrEmpty(Model.ImageName) ? "default.jpg" : Model.ImageName; }
        <img class="w-100 h-auto" alt="" src="~/Images/Administration/@image" />
    </div>
    <div class="flex-section-row-child-50 padding-5 text-align-left">
        <h4 class="activity-title">@Model.Title</h4>
        <p class="margin-left-5 text-align-justify activity-description">@Model.Description</p>
    </div>
</div> 
